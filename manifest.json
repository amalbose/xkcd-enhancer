{
  "manifest_version": 2,

  "name": "XKCD Enchancer",
  "description": "Enhances xkcd website experience.",
  "version": "0.0.1",
   "page_action": {
	"default_icon": "icon.png"
   },
	"content_scripts": [
        {
        "matches": [
            "*://www.xkcd.com/*"
            ],
        "js": ["js/jquery-2.1.4.min.js", "js/content.js"],
		"css": ["style.css"],
        "run_at": "document_end"  
        }
    ],
   "permissions": [
    "tabs","<all_urls>"
    ]
}